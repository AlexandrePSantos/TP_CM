<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Card for Project Actions -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewProjects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/projects"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonAssociateTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/associate_tasks_to_projects" />

            <Button
                android:id="@+id/buttonAssociateUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/associate_users_to_tasks" />

            <Button
                android:id="@+id/buttonViewProjectTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_project_tasks" />

            <Button
                android:id="@+id/buttonMarkProjectCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mark_project_as_completed" />

            <Button
                android:id="@+id/buttonEvaluatePerformance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/evaluate_user_performance" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>